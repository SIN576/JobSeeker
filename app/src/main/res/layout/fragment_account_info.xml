<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".person.AccountInfoFragment">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/profile_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_header"
                    android:paddingBottom="10dp">

                    <ImageView
                        android:id="@+id/btn_account_info_back"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_keyboard_backspace_black_24dp"
                        android:layout_width="40dp"
                        android:layout_height="30dp"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="50dp"
                        android:src="@drawable/ic_launcher_background"
                        app:civ_border_color="#FF000000"
                        app:civ_border_width="2dp" />

                    <TextView
                        android:id="@+id/tv_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile_image"
                        android:layout_centerHorizontal="true"
                        android:text="Soy Sin"
                        android:textAllCaps="true"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_profile_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_profile_name"
                        android:layout_centerHorizontal="true"
                        android:text="Sonlong,Sonlong,Khsach Kandal,Kandal"
                        android:textColor="#fff"
                        android:textSize="15dp" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/info_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_header"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Account Info"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/r_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/info_account"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/icon_person"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:src="@drawable/ic_person" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/icon_person"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/account_info_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="soy sin"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/r_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/r_name"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/icon_email"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:src="@drawable/ic_email" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/icon_email"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/account_info_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="soysin22@gmail.com"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/r_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/r_email"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/icon_location"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:src="@drawable/ic_location_on_black_24dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/icon_location"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/account_info_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sonlong,Sonlong,Khsack kandal,Kandal"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/r_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/r_address"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/icon_about"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:src="@drawable/ic_location_on_black_24dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/icon_about"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="About"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/account_info_about"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hello my name soy sin. I am study at niptict"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/r_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/r_about"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/icon_edit"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:src="@drawable/ic_baseline_edit_24" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/icon_edit"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Edit profile"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/r_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/r_edit"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:padding="5dp"
                        android:id="@+id/icon_logout"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_logout" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/icon_logout"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Logout"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </RelativeLayout>


            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>


    </RelativeLayout>

</FrameLayout>