<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="180dp">

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="2dp"
                    android:elevation="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginRight="5dp"
                        android:padding="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/image_post_job"
                            android:src="@drawable/job_post"
                            android:layout_width="130dp"
                            android:layout_height="120dp"/>
                        <Button
                            android:id="@+id/btn_post_job"
                            android:background="@drawable/button_orange"
                            android:padding="1dp"
                            android:textColor="#fff"
                            android:textSize="10dp"
                            android:text="Post Job"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:textAllCaps="true"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="2dp"
                    android:elevation="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image_post_cv"
                        android:src="@drawable/background_icon"
                        android:layout_width="130dp"
                        android:layout_height="120dp"/>
                    <Button
                        android:id="@+id/btn_post_cv"
                        android:background="@drawable/button_orange"
                        android:padding="1dp"
                        android:textColor="#fff"
                        android:textSize="10dp"
                        android:text="Post CV"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textAllCaps="true"/>

                </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="180dp">

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="2dp"
                    android:elevation="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginRight="5dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/type_of_job"
                        android:layout_width="130dp"
                        android:layout_height="120dp"
                        android:src="@drawable/jjob_types" />

                    <Button
                        android:id="@+id/btn_type_of_job"
                        android:background="@drawable/button_orange"
                        android:padding="1dp"
                        android:textColor="#fff"
                        android:textSize="10dp"
                        android:text="Types of job"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textAllCaps="true"/>

                </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="2dp"
                    android:elevation="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/type_of_cv"
                        android:src="@drawable/types_cv"
                        android:layout_width="130dp"
                        android:layout_height="120dp"/>
                    <Button
                        android:id="@+id/btn_type_of_cv"
                        android:background="@drawable/button_orange"
                        android:padding="1dp"
                        android:textColor="#fff"
                        android:textSize="10dp"
                        android:text="Types of CV"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textAllCaps="true"/>

                </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>